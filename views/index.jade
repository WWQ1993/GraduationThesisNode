script(type='text/html',id='generateDispatch')
    link(rel='stylesheet', href='css/dispatch.css')

    .information
        .title 火灾信息
        .items
            .item
                span.tag 发生地点：
                span.right
                    input
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 火灾类别：
                span.right
                    select
                        option 一般性建筑火灾
                        option 高层建筑火灾
                        option 地下空间火灾
                        option 油类火灾
                        option 一般气体火灾
                        option 毒气火灾
                        option 露天堆场火灾
                        option 交通工具火灾
                        option 一般性火灾
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 火灾面积：
                span.right
                    select
                        option 大于1000平米
                        option 少于1000平米
                        option 少于600平米
                        option 少于300平米
                        option 少于100平米
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 火灾容积：
                span.right
                    select
                        option 大于10000立方米
                        option 少于10000立方米
                        option 少于5000立方米
                        option 少于3000立方米
                        option 少于1000立方米
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 呼叫次数：
                span.right
                    select
                        option 大于5次
                        option 大于3次且小于5次
                        option 少于3次
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 所处阶段：
                span.right
                    select
                        option 初期
                        option 发展期
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 火灾火势：
                span.right
                    select
                        option 较小
                        option 小
                        option 大
                        option 很大
                        option 严峻
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 蔓延状态：
                span.right
                    select
                        option 迅猛
                        option 迅速
                        option 快
                        option 无
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 被困人数：
                span.right
                    select
                        option 大于15
                        option 大于10
                        option 小于10
                        option 小于5
                        option 0
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 受伤人数：
                span.right
                    select
                        option 20人以上
                        option 10人以上
                        option 小于10
                        option 小于5
                        option 0
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 死亡人数：
                span.right
                    select
                        option 大于10人
                        option 大于3人以上
                        option 小于3人
                        option 0
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
            .item
                span.tag 突变险情：
                span.right
                    select
                        option 无
                        option 爆炸
                    select
                        option 肯定(1.0,0.9)
                        option 大概(0.8,0.7)
                        option 可能(0.6,0.5)
